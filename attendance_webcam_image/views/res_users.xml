<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_simple_attendance_webcam_image" model="ir.ui.view">
        <field name="name">Attendance Webcam Image</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <form string="Users">
                <field name="image_1920" readonly="0" widget="image" class="oe_avatar" options="{'zoom': true, 'preview_image': 'image_128'}"/>
                <h1>
                    <field name="name" readonly="1" class="oe_inline"/>
                </h1>
            
                <group name="attendance_webcam_image">
                    <field name="attendance_webcam_image" readonly="0"/>
                </group>
                
                <footer>
                    <button name="attendance_webcam_image_reload" type="object" string="Save" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_simple_attendance_webcam_image" model="ir.actions.act_window">
        <field name="name">Attendance Webcam Image</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.users</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>

    <record id="action_simple_attendance_webcam_image_view" model="ir.actions.act_window.view">
        <field eval="10" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_simple_attendance_webcam_image"/>
        <field name="act_window_id" ref="action_simple_attendance_webcam_image"/>
    </record>
</odoo>