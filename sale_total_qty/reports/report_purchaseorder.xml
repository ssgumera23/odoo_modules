<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="cloverent16_report_purchaseorder" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="////div[hasclass('page')]" position="inside">
            <table class="table table-sm table-borderless">
                <tr>
                    <td><strong>Total Quantity</strong></td>
                    <td align="right"><span t-field="o.total_purchase_qty"/> Pieces</td>
                </tr>
            </table>
        </xpath>
    </template>
    <template id="cloverent16_report_purchaseorder_1" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="////div[hasclass('page')]/div[4]" position="replace">
            <div id="total" class="row justify-content-end">
                <div class="col-4">
                    <table class="table table-sm table-borderless">
                        Total Qty: <span t-field="o.total_purchase_qty"/> Pieces
                        <t t-set="tax_totals" t-value="o.tax_totals"/>
                        <t t-call="account.document_tax_totals"/>
                    </table>
                </div>
            </div>
<!--            <table class="table table-sm table-borderless">-->
<!--                <tr>-->
<!--                    <td><strong>Total Quantity</strong></td>-->
<!--                    <td align="right"><span t-field="o.total_purchase_qty"/> Pieces</td>-->
<!--                </tr>-->
<!--            </table>-->
        </xpath>
    </template>
</odoo>